{

  "manifest_version": 2,
  "name": "avaaz-js-replacement",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },
  
   "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "https://*.avaaz.org/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://secure.avaaz.org/*"],
      "js": ["lib/jquery.js", "content_scripts/avaaz.js"]
    }
  ],

  "page_action": {
    "browser_style": true,
    "default_icon": {
    "16": "icons/page-16.png"
  	},
    "default_popup": "popup/fill_form.html"
  }

}